{
  "name": "notification-tg-bot",
  "version": "1.0.0",
  "description": "Telegram notification bot with grammY, PostgreSQL, and Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:status": "prisma migrate status",
    "prisma:rollback": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migration:check": "./scripts/migration-health.sh",
    "migration:deploy": "./scripts/deploy-migration.sh",
    "migration:backup": "./scripts/backup-before-migration.sh",
    "migration:monitor": "./scripts/migration-monitor.sh",
    "migration:restore": "./scripts/restore-from-backup.sh"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "postgresql",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/menu": "^1.3.1",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "grammy": "^1.21.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
